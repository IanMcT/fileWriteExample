<Window x:Class="fileWriteExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:fileWriteExample"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" FontSize="24">
    <StackPanel>
        <TextBox x:Name="txtFileName"></TextBox>
        <TextBox x:Name="txtInput"></TextBox>
        <Button x:Name="btnWrite" Click="btnWrite_Click">
            Write
        </Button>
        <Button x:Name="btnAppend" Click="btnAppend_Click">
            Append
        </Button>
    </StackPanel>
</Window>
